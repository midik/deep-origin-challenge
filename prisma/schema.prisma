generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  email String @unique
  Url   Url[]
}

model UrlTrack {
  id            String    @id @default(cuid())
  visits        Int       @default(0)
  lastVisitedAt DateTime?
}

model Url {
  id      String @id @default(cuid())
  url     String
  baseUrl String
  slug    String @unique
  userId  String
  User    User   @relation(fields: [userId], references: [id], onUpdate: NoAction, onDelete: NoAction)
}
